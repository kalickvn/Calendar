%article.art-post.art-article
  .art-postcontent.art-postcontent-0.clearfix
    .art-content-layout-wrapper.layout-item-0
      .art-content-layout.layout-item-1
        .art-content-layout-row
          - @categories.each_with_index do |i,index|
            %div{:class =>"art-layout-cell layout-item-#{index + 2} div-a",:style => "width: 25%",:onclick =>"window.location='#{calendars_path(:category_id =>i.id)}'"}
              %div.center_image
                =image_tag "img_lich/lich_bloc.jpg"
              %h1
                =i.name
              %h6
                =i.description
                %span{:style => "color: rgb(21, 28, 35); -webkit-border-horizontal-spacing: 10px;"}
              .more_nav
                %a{:href =>"#{calendars_path(:category_id =>i.id)}"}  chi tiết >>  
            %br/
    .art-content-layout-wrapper.layout-item-6
      .art-content-layout.layout-item-7
        .art-content-layout-row
          .art-layout-cell.layout-item-8.slide_thuy.border-lightgray{:style => "width: 75%"}
            = render :partial =>"shared/intro", :locals =>{:intro => @home_intro}
          .art-layout-cell.layout-item-9{:style => "width: 25%"}
            %h2
              %span{:style => ""} LỊCH THEO CHỦ ĐỀ
            %ul
              %li Thiên nhiên tươi đẹp
              %li
                Sắc xuân
                %span{:style => "color: rgb(31, 40, 51); font-size: 13px; line-height: 19px; -webkit-text-decorations-in-effect: none;"}
              %li Quê hương thanh bình
              %li Một thoáng Việt Nam
              %li Phong cảnh thế giới
              %li
                Biệt thự & xe hơi
                %span{:style => "font-size: 13px; line-height: 19px;"}
                  %br/
              %li Phúc Lộc Thọ
              %li Mã đáo thành công
              
            %p.support
              %h2
                %span HỖ TRỢ TRỰC TUYẾN
              %script{:src => "http://www.skypeassets.com/i/scom/js/skype-uri.js", :type => "text/javascript"}
              %div{:style =>"text-align:center"}
                %a{:href => "ymsgr:sendim?thienhoa09"}
                  %img{:alt => "Hỗ trợ trực tuyến", :border => "0", :src => "#{'/assets/online.gif'}"}
                %a{:href => "ymsgr:sendim?Tanphuong.ltd"}
                  %img{:alt => "Hỗ trợ trực tuyến", :border => "0", :src => "#{'/assets/online.gif'}"}
                %a{:href => "skype:thienhoa09?chat"}
                  %img#skype_11{:alt => "Hỗ trợ trực tuyến", :src => "#{'/assets/skype.png'}", :title => "Hỗ trợ trực tuyến"}/
            %p
              %h2
                %span{} LƯỢT XEM
              %a{:href => "http://www.easycounter.com/",:style=>"width:100%;text-align:center"}
                %div
                  %img{:alt => "HTML Counter", :border => "0", :src => "http://www.easycounter.com/counter.php?kalickvn"}/
            %p
              -ad = Advertising.all
              -unless ad.blank?
                %h2
                  %span QUẢNG CÁO
                %div.qc-img
                  -ad.each do |i|
                    -if !i.image.blank?
                      %a{:href => "#{i.link}"}
                        =image_tag i.image.url(:original),:alt =>"QUẢNG CÁO"
